#!/bin/bash
## COLORS ##
RED="\[$(tput setaf 1)\]"
GREEN="\[$(tput setaf 2)\]"
YELLOW="\[$(tput setaf 3)\]"
BLUE="\[$(tput setaf 4)\]"
PURPLE="\[$(tput setaf 5)\]"
CYAN="\[$(tput setaf 6)\]"
WHITE="\[$(tput setaf 7)\]"
### END COLORS ###

### EFFECTS ###
BOLD="\[$(tput bold)\]"
START_ULINE="\[$(tput smul)\]"
END_ULINE="\[$(tput rmul)\]"
BLINK="\[$(tput blink)\]"
RESET="\[$(tput sgr0)\]"
### END EFFECTS ###

if [[ "$UID" -eq 0 ]]; then
  user_color="$RED"
else
  user_color="$GREEN"
fi
PROMPT_COMMAND=__prompt_command
__prompt_command() {
  local last_exit_code="$?"
  if [[ $"last_exit_code" -eq 0 ]]; then
    exit_code_color="$GREEN"
  else
    exit_code_color="$RED"
  fi
  PS1="[$CYAN\t$RESET]-[$user_color$BOLD\u$RESET$BLUE@$YELLOW\H$RESET]-[$BLUE\w$RESET]-[$exit_code_color$last_exit_code$RESET]\$ "
}
